<Window x:Name="mainWindow" x:Class="TestClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800" Loaded="LoadedHandler" Closed="ClosedHandler">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="397*"/>
            <ColumnDefinition Width="303*"/>
            <ColumnDefinition Width="93*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="mainField" Text="TextBlock" FontFamily="MS Gothic" Margin="0,0,302,-0.667" TextAlignment="Right" Grid.ColumnSpan="2"/>
        <TextBlock x:Name="information" Grid.Column="1" Margin="4.667,0,92.333,-0.667" TextWrapping="Wrap" Text="TextBlock" Grid.ColumnSpan="2"/>
        <Button x:Name="forwardButton" Content="Forward" Grid.Column="2" HorizontalAlignment="Left" Height="25" Margin="10.333,10,0,0" VerticalAlignment="Top" Width="72" Click="Forwarding"/>
        <CheckBox x:Name="autoCheckBox" Content="Auto" Grid.Column="2" Height="19" Margin="10.333,40,0,0" VerticalAlignment="Top" Width="72" HorizontalAlignment="Left" Checked="AutoChecked" Unchecked="AutoUnchecked"/>

    </Grid>
</Window>
